{
    "name": "xmas-time",
    "displayName": "Xmas Time (╯^□^)❄☃❄",
    "publisher": "DevVali",
    "repository": {
        "type": "git",
        "url": "https://github.com/devvali/xmas-time.git"
    },
    "description": "Xmas Time adds a Christmas countdown to your Visual Studio Code's status bar!",
    "icon": "images/logo.png",
    "version": "1.1.1",
    "engines": {
        "vscode": "^1.84.0"
    },
    "keywords": [
        "(╯^□^)❄☃❄",
        "Christmas",
        "Christmas Day",
        "Chrsitmas Holiday",
        "Chrsitmas magic",
        "Christ",
        "Merry Christmas",
        "Happy Christmas",
        "Xmas",
        "Xmas countdown",
        "Holiday",
        "Countdown",
        "Countdown for Christmas",
        "Countdown for Christmas Day",
        "Christmas countdown",
        "Christmas Day countdown",
        "Christmas countdown 2023",
        "Festival countdown",
        "Status bar",
        "Time left until Christmas",
        "Sleeps until Christmas",
        "How many days til Christmas",
        "How many days left to Christmas",
        "Fun",
        "Magic",
        "Snow",
        "Icons",
        "Festive icons",
        "Coding",
        "Coding sessions"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "xmasTime.run",
                "title": "Xmas Time (╯^□^)❄☃❄"
            }
        ],
        "configuration": {
            "title": "Xmas Time",
            "properties": {
                "xmasTime.yourXmas": {
                    "title": "Your Xmas",
                    "description": "Personalize your Xmas experience by specifying the day you celebrate. The countdown adapts to your festive schedule.",
                    "type": "string",
                    "enum": [
                        "2023-12-24",
                        "2023-12-25",
                        "2024-01-06"
                    ],
                    "default": "2023-12-25"
                }
            }
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js",
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.3",
        "@types/node": "18.x",
        "@types/vscode": "^1.84.0",
        "@vscode/test-electron": "^2.3.6",
        "eslint": "^8.52.0",
        "eslint-config-prettier": "^9.0.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "prettier": "3.1.0",
        "typescript": "^5.2.2",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "dayjs": "^1.11.10"
    }
}
