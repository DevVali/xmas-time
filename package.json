    },
    "devDependencies": {
        "@types/mocha": "^10.0.3",
        "@types/node": "18.x",
        "@types/vscode": "^1.84.0",
        "@vscode/test-electron": "^2.3.6",
        "eslint": "^8.52.0",
        "eslint-config-prettier": "^9.0.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "prettier": "3.1.0",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "dayjs": "^1.11.10"
    }
